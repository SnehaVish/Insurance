<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insurance_types"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"


    tools:context="com.insuranceproject.insurance.InsuranceTypes">

    <Button
        android:text="Life Insurance"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:onClick="lifeInsurance"
        android:id="@+id/childrens"

        />

    <Button
        android:text="General Insurance"
        android:layout_below="@+id/childrens"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:onClick="generalInsurance"
        android:id="@+id/moneyBack" />

    <TextView
        android:text=""
        android:textColor="@color/bright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/childrens"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/textView" />

    <Button
        android:text="Sign out"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:id="@+id/button3"
        android:layout_below="@+id/moneyBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="SignOut"
        />
</RelativeLayout>
